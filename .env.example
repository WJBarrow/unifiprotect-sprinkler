# ─── Orbit bhyve credentials ──────────────────────────────────────────────────
# The email and password used to log in to the bhyve app / website
BHYVE_EMAIL=your@email.com
BHYVE_PASSWORD=yourpassword

# Device ID of the bhyve timer to control.
# Find it via: GET https://api.orbitbhyve.com/v1/devices
#   (use your session token from login)
BHYVE_DEVICE_ID=your_device_id

# ─── Sprinkler behaviour ───────────────────────────────────────────────────────
# Zone/station number to activate (1-based, matches bhyve app numbering)
ZONE_NUMBER=1

# How long to run the zone in minutes
RUN_TIME=5

# ─── Unifi Protect webhook ─────────────────────────────────────────────────────
# The trigger key from the Unifi Protect alarm payload to match.
# The webhook body is: {"alarm":{"triggers":[{"key":"<value>"}]}}
# Common values: animal, person, vehicle, motion
TRIGGER_KEY=animal

# ─── Server ───────────────────────────────────────────────────────────────────
WEBHOOK_PORT=8383

# ─── Logging ──────────────────────────────────────────────────────────────────
# DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
